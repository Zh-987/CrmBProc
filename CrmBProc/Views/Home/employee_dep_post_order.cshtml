@model CrmBProc.Models.Order_table

@{
    ViewBag.Title = "Оформления заказа";
    Layout = "~/Views/Shared/_Layout_employee_dep_post.cshtml";
}

<h2 class="text-center" style="margin-top:3%">@ViewBag.Title </h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="col-lg-3">
    </div>
    <div class="form-horizontal col-lg-9" style="color: #151948;">

        <br />
        <br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.order_FK_emp, "От сотрудника", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("order_FK_emp", ViewBag.list_employee as SelectList, "--выбрать--", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.order_FK_emp, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.order_FK_branch, "От департамента", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("order_FK_branch", ViewBag.list_branch as SelectList, "--выбрать--", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.order_FK_branch, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.order_FK_request, "Заявка", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("order_FK_request", ViewBag.list_request as SelectList, "--выбрать--", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.order_FK_request, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.order_group, "Группа заявки", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.order_group, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.order_group, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.order_terms, "Условия доставки", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                Доставка
                @Html.RadioButtonFor(model => model.order_terms, "Доставка")
                Самовывоз
                @Html.RadioButtonFor(model => model.order_terms, "Самовывоз")
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Оформить" class="btn btn-apple" />
            </div>
        </div>
    </div>
}

<p style="color:red">@ViewBag.msg</p>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

