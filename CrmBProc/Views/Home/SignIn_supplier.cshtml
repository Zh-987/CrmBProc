@model CrmBProc.Models.Suppliers_tbl

@{
    ViewBag.Title = "Войти";
    Layout = "~/Views/Shared/_LayoutSecond.cshtml";
}


<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link rel="stylesheet" href="~/Content/sign.css">
</head>


<div class="wrapper fadeInDown text-center" style="display:inline-block; font-size:16px">
    @Html.ActionLink("Поставщик", "SignIn_supplier", "Home", new { @class = "nav-link page-scroll", @style = "display:inline" })
    @Html.ActionLink("Сотрудник", "SignIn_employee", "Home", new { @class = "nav-link page-scroll", @style = "display:inline" })
    @Html.ActionLink("Администратор", "SignIn_admin", "Home", new { @class = "nav-link page-scroll", @style = "display:inline" })
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="wrapper fadeInDown">
        <div id="formContent">
            <!-- Tabs Titles -->
            <!-- Icon -->
            <div class="fadeIn first">
                <h2 style="color:gray; margin-top:9px; margin-bottom:9px">Поставщик</h2>
            </div>

            <!-- Login Form -->
            <form>





                <div class="fadeIn second">
                    @Html.EditorFor(model => model.supplier_login, new { htmlAttributes = new { @class = "fadeIn second", @type = "text", @id = "login", @name = "login", @placeholder = "логин", } })
                    @Html.ValidationMessageFor(model => model.supplier_login, "", new { @class = "text-danger" })
                </div>



                <div class="fadeIn third">


                    @Html.PasswordFor(model => model.supplier_password, new { @class = "fadeIn third", @type = "password", @id = "password", @name = "login", @placeholder = "пароль", })
                    @Html.ValidationMessageFor(model => model.supplier_password, "", new { @class = "text-danger" })

                </div>

                <input type="submit" class="fadeIn fourth" value="Войти" style="margin-top:15px">
            </form>

            <!-- Remind Passowrd -->
            <div id="formFooter" style="font-size:16px">

                @Html.ActionLink("Регистрация", "supplier_register", new { @class = "underlineHover" })

            </div>

        </div>
    </div>
}

<p style="color:red">@ViewBag.msg</p>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
