@using PagedList.Mvc
@model PagedList.IPagedList<CrmBProc.Models.Suppliers_tbl>

@{
    ViewBag.Title = "Все данные о поставщиках";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}

<h2 class="text-center">Все данные о поставщиках</h2>

<table class="table" style="color: #151948; margin-top:4%">
    <tr>
        <th>
            Ф.И.О. представителя 
        </th>

        <th>
           логин
        </th>
        <th>
            Компания 
        </th>
        <th>
          Адрес
        </th>
        

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.supplier_fullname)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.supplier_login)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.supplier_companyname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.supplier_address)
            </td>
            

            <td>

                @Html.ActionLink("Подробности", "Details_supplier", new { id = item.supplier_id }) |
                @Html.ActionLink("Редактировать", "Edit_supplier", new { id = item.supplier_id }) |
                @Html.ActionLink("Удалить", "Delete_supplier", new { id = item.supplier_id })

            </td>
        </tr>
    }

</table>


<div id="container" style="margin-left: 20px; color: #151948">
    <p></p>
    <p></p>
    <div class="pagination" style="margin-left:400px">
        Страница @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
        / @Model.PageCount  @Html.PagedListPager(Model, page => Url.Action("admin_tab_supplier_list", new { page }))
    </div>
</div>